@model IEnumerable<ManagementSchool.Models.Student>

@{
    ViewData["Title"] = "Students";
}

<h2>Students</h2>

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Class</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.FirstName</td>
                <td>@student.LastName</td>
                <td>@student.Class.ClassName</td>
                <td>
                    <a asp-action="Details" asp-route-id="@student.StudentId" class="btn btn-primary">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
